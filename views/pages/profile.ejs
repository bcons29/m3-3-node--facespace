<% include('../partials/header') %>
<div class="profilePage">
  <div class="profile-user">
    <img class="profile-User-avatar"  src="<%= user.avatarUrl %>" alt="<% user.name %>" />
  <h2><%= user.name %></h2>
  </div>  
<div class="profileFriends">
    <h3><%= user.name %>'s Friends</h3>
    <ul class="profile-friends-list">
      <% friends.forEach(friend => { %>
        <%- include('../partials/friends', {friend: friend }) %>
      <% }) %>
      <!-- loop over the array of friends -->
      <!-- each friend's image and name should be visible. -->
    </ul>
  </div>
</div>
<% include("../partials/footer") %>